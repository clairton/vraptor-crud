<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Configuration>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss,SSS} %5p [%-20c{1}] %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="org.apache.log4j.xml" level="warn" />
		<Logger name="org.jboss.weld" level="warn" />
		<Logger name="br.eti.clairton" level="info" />
		<Logger name="br.com.caelum" level="info" />
		<Logger name="hibernate" level="warn" />
		<Logger name="org.hibernate" level="warn" />
		<Root level="debug">
			<AppenderRef ref="STDOUT" />
		</Root>
		<Root level="info">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>
